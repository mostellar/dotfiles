{
    "title": "Escape to Grave Accent and Tilde",
    "rules": [
      {
        "description": "Changes escape key to tilde when used with left_gui or left_control",
        "manipulators": [
          {
            "type": "basic",
            "from": {
              "key_code": "escape",
              "modifiers": {
                "mandatory": [
                  "left_gui"
                ]
              }
            },
            "to": [
              {
                "key_code": "grave_accent_and_tilde",
                "modifiers": [
                  "left_gui"
                ]
              }
            ]
          },
          {
            "type": "basic",
            "from": {
              "key_code": "escape",
              "modifiers": {
                "mandatory": [
                  "left_control"
                ],
                "optional": [
                    "left_shift"
                  ]
              }
            },
            "to": [
              {
                "key_code": "grave_accent_and_tilde",
                "modifiers": [
                  "left_control"
                ]
              }
            ]
          }
        ]
      }
    ]
  }
  
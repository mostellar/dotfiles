{
    "title": "Capslock to Ctrl with Modifier Else Esc",
    "rules": [
      {
        "description": "Pressing CapsLock with a modifier sends Ctrl, pressing it by itself sends Escape. Useful for Evil Mode.",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "caps_lock",
                    "modifiers": {
                        "optional": ["any"]
                    }
                },
                "to": [
                    {
                        "key_code": "left_control",
                        "lazy": true
                    }
                ],
                "to_if_alone": [
                    {
                        "key_code": "escape"
                    }
                ]
            }
            
        ]
      }
    ]
  }

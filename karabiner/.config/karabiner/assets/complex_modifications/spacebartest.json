{
    "title": "Spacebar Test",
    "rules": [
      {
        "description": "Spaebar Test",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "spacebar",
                    "modifiers": {
                        "optional": ["any"]
                    },
                    "simultaneous": [
                        {
                            "key_code": "spacebar"
                        },
                        {
                            "key_code": "h"
                        }
                    ],
                    "simultaneous_options": {
                        "detect_key_down_uninterruptedly": true,
                        "key_down_order": "strict"
                    }
                },
                "to": [
                    {
                        "key_code": "left_control",
                        "lazy": false
                    }
                ],
                "to_if_alone": [
                    {
                        "key_code": "spacebar"
                    }
                ]
            }
        ]
      }
    ]
  }

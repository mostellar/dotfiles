{
    "title": "Spacebar Test",
    "rules": [
      {
        "description": "Spacebar Test",
        "manipulators": [
            {
                "type": "basic",
                "parameters": {
                    "basic.simultaneous_threshold_milliseconds": 500
                },
                "from": {
                    "modifiers": {
                        "optional": ["any"]
                    },
                    "simultaneous": [
                        {
                            "key_code": "spacebar"
                        },
                        {
                            "key_code": "any"
                        }
                    ],
                    "simultaneous_options": {
                        "detect_key_down_uninterruptedly": false,
                        "key_down_order": "strict",
                        "key_up_order": "strict_inverse"
                    }
                },
                "to": [
                    {
                        "modifiers": ["left_control"]
                    }
                ]
            }
        ]
      }
    ]
  }

{
    "title": "Spacebar to Ctrl with Modifier Else Enter",
    "rules": [
      {
        "description": "Pressing Spacebar with a modifier sends Ctrl, pressing it by itself sends Enter. Useful for Evil Mode.",
        "manipulators": [
            {
                "type": "basic",
                "from": {
                    "key_code": "spacebar",
                    "modifiers": {
                        "optional": ["any"]
                    }
                },
                "to": [
                    {
                        "key_code": "left_control",
                        "lazy": false
                    }
                ],
                "to_if_alone": [
                    {
                        "key_code": "spacebar"
                    }
                ]
            }
        ]
      }
    ]
  }
